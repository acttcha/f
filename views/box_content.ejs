<script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>

<div id="outModal" class="modal">
  <div class="modal-content">
      <span class="close" style="color: red;" id="closeDeleteModalBtn"><i class="fas fa-times-circle"></i></span>
      <form id="deleteForm">
          <!-- 수정할 데이터 필드 -->
          <p style="margin: 0; text-align: center;">토트에서 해당 상품을 꺼내시겠습니까?</p>
            <button type="button" id="outDataBtn">예</button>
      </form>
  </div>
</div>

<div class="card mb-4">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <i class="fas fa-table me-1"></i>
                토트 내용물 조회
            </div>
        </div>
        
    </div>
    <div class="card-body">
        <table id="datatablesSimple">
            <thead>
                <tr>
                    <th>id</th>
                    <th>상자번호</th>
                    <th>주문번호</th>
                    <th>상품번호</th>
                    <th>수량</th>
                    <th>리빈선반위치</th>
                    <th>변경</th>

        
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>id</th>
                    <th>상자번호</th>
                    <th>주문번호</th>
                    <th>상품번호</th>
                    <th>수량</th>
                    <th>리빈선반위치</th>
                    <th>변경</th>
                </tr>
            </tfoot>
            <tbody>
                <% box_contents.forEach(box_content => { %>
                    <tr>
                      <td><%= box_content.box_content_id %></a></td>
                      <td><%= box_content.box_id %></td>
                      <td><%= box_content.order_id %></td>
                      <td><%= box_content.product_id %></td>
                      <td><%= box_content.quantity %></td>
                      <td><%= box_content.rebin_rack_id %></td>
                      <td>
                        <div class="dropdown">
                          <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                            <i class="bx bx-dots-vertical-rounded"></i>
                          </button>
                          <div class="dropdown-menu">
                            <button id="outModalBtn<%= box_content.box_content_id %>" class="dropdown-item" data-id="<%= box_content.box_content_id %>" data-orderid="<%= box_content.order_id %>">
                              <i class="bx bx-edit-alt me-1"></i> 토트에서 해당 상품 꺼내기
                            </button>
                          </div>
                        </div>
                      </td>
                    </tr>
                  <% }); %>
            </tbody>
            
        </table>
        <div class="center-align">
        <a onclick="goBack()" id="backbtn" type="button" class="btn btn-dark">뒤로 가기</a>
        </div>

    </div>
</div>

<script>


// 삭제 모달 열기
document.addEventListener("click", function(event) {
  if (event.target.id.includes("outModalBtn")) {
    openModal("outModal")
    const Id = event.target.getAttribute("data-id");
    const orderId = event.target.getAttribute("data-orderId");
    console.log(Id)
    window.moveId = Id;
    window.moveOrderId = orderId;

  }
});

// 삭제 모달 닫기
document.getElementById("closeDeleteModalBtn").addEventListener("click", function() {
    closeModal("outModal")
});

// 수정 모달 외부 클릭 시 닫기
window.addEventListener("click", function(event) {
    if (event.target == document.getElementById("outModal")) {
        closeModal("outModal")    
    }
});


// 데이터 삭제 버튼 클릭 시
document.getElementById("outDataBtn").addEventListener("click", function() {

    const Id = window.moveId;
    const orderId = window.moveOrderId;
    console.log(Id);
    console.log(orderId);

    fetch("/admin/deleteBoxContent/" + Id, { 
        method: "DELETE", 
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({ order_id: orderId })
        ,
    })
    .then(response => response.json())
    .then(data => {
        // 서버 응답 처리
        if (data.success) {
            document.getElementById("outModal").style.display = "none";
            alert('삭제 완료');
            location.reload(); 

        } else {
            alert(data.message);
        }
    });
});

function openModal(modalId) {
  document.getElementById(modalId).style.display = "block";
}

function closeModal(modalId) {
  document.getElementById(modalId).style.display = "none";
}


function goBack() {
    window.history.back();
}
</script>
