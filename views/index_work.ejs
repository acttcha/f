<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title>작업자 페이지 - Dashboard</title>
        <link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet" />
        <link href="css/main.css" rel="stylesheet" />
        <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    </head>
    <body class="sb-nav-fixed">
        <%- include('topnav_work.ejs')%>
        <div id="layoutSidenav">
            <%- include('sidenav_work.ejs')%>
            <div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid px-4">
                        <h1 class="mt-4">Dashboard</h1>
                        <ol class="breadcrumb mb-4">
                            <li class="breadcrumb-item active">Control</li>
                        </ol>
                        <div class="row">
                            <% 
                        const cards = [
                            { title: "진열 작업", bgColor: "bg-primary", link: "/work/display1" },
                            { title: "집품 작업", bgColor: "bg-box2", link: "/work/picking1" },
                            { title: "리빈 작업", bgColor: "bg-success", link: "#" },
                            { title: "포장 작업", bgColor: "bg-danger", link: "/work/packing1" },
                        ];

                        cards.forEach(card => { %>
                            <div class="col-xl-3 col-md-6">
                                <div class="card <%= card.bgColor %> text-white mb-4 shadow-pop-br">
                                    <div class="card-body"><%= card.title %></div>
                                    <div class="card-footer d-flex align-items-center justify-content-between">
                                        <a class="small text-white stretched-link" href="<%= card.link %>">시작</a>
                                        <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                        </div>
                        
                        <ol class="breadcrumb mb-4">
                            <li class="breadcrumb-item active">Funtion</li>
                        </ol>
                        <div class="row">
                            <% 
                        const cards2 = [
                            { title: "토트 조회", bgColor: "bg-info", link: "/work/viewbox" }
                        ];

                        cards2.forEach(card2 => { %>
                            <div class="col-xl-3 col-md-6">
                                <div class="card <%= card2.bgColor %> text-white mb-4 shadow-pop-br">
                                    <div class="card-body"><%= card2.title %></div>
                                    <div class="card-footer d-flex align-items-center justify-content-between">
                                        <a class="small text-white stretched-link" href="<%= card2.link %>">시작</a>
                                        <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                        </div>
                    </div>
                </main>
                <%- include('footer.ejs')%>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
        <script src="js/scripts.js"></script>
    </body>
</html>
